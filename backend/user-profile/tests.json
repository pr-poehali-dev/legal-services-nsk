{
  "tests": [
    {
      "name": "Test get profile without authorization",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test get profile with valid token",
      "method": "GET",
      "path": "/",
      "headers": {
        "Authorization": "Bearer valid.jwt.token"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "id": "string",
        "email": "string",
        "name": "string",
        "role": "string",
        "created_at": "string",
        "is_active": "boolean"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test update profile",
      "method": "PUT",
      "path": "/",
      "headers": {
        "Authorization": "Bearer valid.jwt.token"
      },
      "body": {
        "name": "Новое Имя",
        "phone": "+7 (999) 888-77-66"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "id": "string",
        "email": "string",
        "name": "string",
        "phone": "string",
        "role": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}