{
  "tests": [
    {
      "name": "Register new lawyer",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "email": "lawyer@test.com",
        "password": "password123",
        "name": "Тестовый Юрист"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "token": "string",
        "user": {
          "email": "lawyer@test.com",
          "name": "Тестовый Юрист",
          "role": "lawyer"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with correct credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "admin@legal.ru",
        "password": "admin123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "token": "string",
        "user": {
          "email": "admin@legal.ru",
          "role": "admin"
        }
      },
      "bodyMatcher": "partial"
    }
  ]
}
