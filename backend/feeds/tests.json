{
  "tests": [
    {
      "name": "Get sitemap",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Content-Type": "application/xml; charset=UTF-8"
      }
    },
    {
      "name": "Get RSS feed",
      "method": "GET",
      "path": "/?type=rss",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Content-Type": "application/rss+xml; charset=UTF-8"
      }
    },
    {
      "name": "OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    }
  ]
}
