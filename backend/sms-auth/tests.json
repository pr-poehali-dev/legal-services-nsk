{
  "tests": [
    {
      "name": "Send SMS code",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "send",
        "phone": "+79991234567"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Verify code - valid",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "verify",
        "phone": "+79991234567",
        "code": "123456"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing phone",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "send"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
